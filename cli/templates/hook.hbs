import { useEffect, useState } from 'react';
import { useLocation, useNavigate } from 'react-router-dom';
import { App } from 'antd';
import useFilter from '@hooks/utility-hooks/use-filter';
import { {{modelName}} } from '@models/{{modelFileName}}';
import { AppError, QueryParams } from '@models/utils-model';
import {
  use{{exportedName.getAll}}Query,
  use{{exportedName.save}}SavedMutation,
  use{{exportedName.getOne}}Query
} from '@services/{{serviceFileName}}';
import { formatQueryParams } from '@utils/helpers';

export const use{{hooksName.getAll}} = () => {
  const location = useLocation();

  const { getQueryParams, setQueryParams, getDefaultQueryParams } = useFilter();
  const queryParams = getQueryParams();

  const [filterParams, setFilterParams] = useState<QueryParams>({});
  const [skip, setSkip] = useState<boolean>(true);

  const { isFetching, data: response } = use{{exportedName.getAll}}Query(formatQueryParams(filterParams), { skip: skip });

  useEffect(() => {
    setFilterParams(queryParams);
  }, [location.search]);

  useEffect(() => {
    const newQueryParams = {
      ...filterParams,
      ...getDefaultQueryParams(),
    };

    setQueryParams(newQueryParams);
    setFilterParams(newQueryParams);
    setSkip(false);
  }, []);

  const loading = isFetching;

  return {
    isLoading: loading,
    data: response
  };
};

export const use{{hooksName.form}}Form = () => {
  const { message } = App.useApp();
  const navigate = useNavigate();

  const [{{parameters}}Saved, { isLoading, isSuccess, isError, error }] = use{{exportedName.save}}SavedMutation();

  useEffect(() => {
    if (isSuccess) {
      message.success('{{moduleName}} saved successfully.');
      navigate('/{{link}}');
    }

    if (isError && error) {
      message.error((error as AppError).data.errors);
    }
  }, [isSuccess, isError, error]);

  const onSaved = ({{parameters}}: {{modelName}}) => {
    {{parameters}}Saved({{parameters}});
  };

  return {
    isLoading,
    onSaved
  };
};

export const use{{hooksName.getOne}} = ({{parameters}}Id: number) => {
  const { isLoading, data: {{parameters}} } = use{{exportedName.getOne}}Query({{parameters}}Id);

  return {
    isLoading,
    {{parameters}}
  };
};